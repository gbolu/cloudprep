<html>
  <head>
    <title>ToDo App</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <h2>A Simple ToDo List App</h2>

      <form action="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="add new task" />
        <button>Add Task</button>

        <h2>Added Task</h2>

        <% for( var i = 0; i < task.length; i++){ %>
        <div>
          <input type="checkbox" name="check" value="<%= task[i] %>" /> <%=
          task[i] %>
        </div>
        <% } %>

        <br />

        <button formaction="/removetask" type="submit" id="top">
          Mark as done
        </button>
      </form>

      <h2>Completed task</h2>

      <% for(var i = 0; i < complete.length; i++){ %>
      <li><%= complete[i] %></li>
      <% } %>
      <br />
      <div>
        Adapted from
        <a href="http://" target="_blank" rel="noopener noreferrer"
          >https://github.com/missating/nodejs-todo</a
        >
      </div>
    </div>
  </body>
</html>
